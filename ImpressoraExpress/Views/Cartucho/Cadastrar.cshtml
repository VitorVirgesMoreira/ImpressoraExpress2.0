
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Cadastrar Cartucho</title>
    </head>
    <body>
        <div>
            <form method="post">
                <div class="form-group">
                    <label class="control-label col-md-2">Nome Modelo</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="NomeModelo" id="NomeModelo" />
                        <span class="text-danger" id="erroNomeModelo" name="erroNomeModelo"></span>
                    </div>
                </div>
    
                <div class="form-group">
                    <label class="control-label col-md-2">Cor</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="Cor" id="Cor" />
                        <span class="text-danger" id="erroCor" name="erroCor"></span>
                    </div>
                </div>
    
                <div class="form-group">
                    <label class="control-label col-md-2">Valor de Unidade</label>
                    <div class="col-md-10">
                        <input class="form-control" type="number" name="ValorUnidade" id="ValorUnidade" />
                        <span class="text-danger" id="erroValorUnidade" name="erroValorUnidade"></span>
                    </div>
                </div>
    
                <div class="form-group">
                    <div class="col-md-10">
                        <input name="BotaoEnviar" id="BotaoEnviar" type="submit" value="Cadastrar" />
                    </div>
                </div>
    
            </form>
    
        </div>
    </body>
</html>

